    <div class="row">
        <div class="col-md-8">
            <section>
                <div id="videoContainer">
                    <script>
                            var videoWidth = 500;
                            if ($(window).width() < 750) {
                                videoWidth = $(window).width() * 11 / 16;
                            }
                            document.getElementById("videoContainer").style.height = videoWidth + "px";
                            $("#videoContainer").append('<video id="azuremediaplayer" class="azuremediaplayer amp-default-skin amp-big-play-centered" preload="auto" width="100%" height="100%" poster="" tabindex=0><p class="amp-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that supports HTML5 video</p></video>');
                            $(document).ready(function () {
                                window.addEventListener('resize', function (event) {
                                    if (window.innerWidth < 750) {
                                        document.getElementById("videoContainer").style.height = $(window).width() * 11 / 16 + "px";
                                    } else {
                                        document.getElementById("videoContainer").style.height = "500px";
                                    }
                                });
                            });
                    </script>
                </div>
            </section>
            <div id="copyrightInfo" class="muted"></div>
        </div>
        <div class="col-md-4 well">
            <h3>Chosen Player Options</h3>
            <table style="width:100%">
                <tr>
                    <td>Source Format:</td>
                    <td><span id="sourceFormat"></span></td>
                </tr>
                <tr>
                    <td>Tech:</td>
                    <td><span id="tech"></span></td>
                </tr>
                <tr>
                    <td>Protection:</td>
                    <td><span id="protection"></span></td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <div class="config-body row">
                <div class="well">

                    <div id="assetConfig" class="form-group adaptive">

                        <label for="adaptive-url">Adaptive streaming URL from Azure Media Services</label><br /><br />

                        <div class="row">
                            <div class="col-md-2">Samples:</div>
                            <div class="col-md-10">
                                <select class="form-control" id="selectSource" style="width: 100%">
                                    <option value=" " disabled selected format="auto" protection="none" token="none" audiolabel="none">
                                        Select an asset in the library
                                    </option>
                                    @foreach (var i in Model.VideoList)
                                    {
                                    <option value="@(i.Item3)/manifest" format="auto" protection="@(i.Item4)" token="Bearer%3D@(Model.KdAccessJwtToken.RawData)" audiolabel="none">
                                        @i.Item1.Name
                                    </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2">URL:</div>
                            <div class="col-md-10">
                                <span><input style="color:grey;width:100%;display:inline-block" type="text" class="input-sm form-control" id="adaptive-url" value="//amssamples.streaming.mediaservices.windows.net/91492735-c523-432b-ba01-faba6c2206a2/AzureMediaServicesPromo.ism/manifest"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-2">
                                <span id="urlHelp" class="help-block" style="font-size: 0.85em; padding-left: 0.5em;">The URL should contain <i>*.ism/manifest</i> or <i>*.mp4</i></span>
                            </div>
                            <div class="col-md-4">
                                <span class="help-block" style="float: right; font-size: 0.85em;padding-right:0.5em"><input type="checkbox" name="advanced" value="advanced">Advanced Options</span>
                            </div>
                        </div>
                    </div>

                    <div id="advancedOptions">

                        <label for="adaptive-url">Advanced Options </label><span class="help-block" style="font-size: 0.85em;padding-right:0.5em">Please note: not all formats are playable by all techs</span>
                        <br />
                        <div class="row">
                            <div class="col-md-2">Format:</div>
                            <div class="col-md-6">
                                <select id="selectFormat" style="width: 100%" class="form-control">
                                    <option value="auto" selected>Azure Auto-Generated</option>
                                    <option value="dash">DASH</option>
                                    <option value="smooth">Smooth</option>
                                    <option value="hls">HLS</option>
                                    <option value="mp4">Progressive MP4</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div id="formatOther" class="col-md-4">
                                <input style="color:grey;width:100%;display:inline-block" type="text" class="input-sm form-control" id="formatOtherVal" placeholder="MIME_Type">
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2">Tech:</div>
                            <div class="col-md-6">
                                <select id="selectTech" style="width: 100%" class="form-control">
                                    <option value="auto" selected>Auto Select</option>
                                    <option value="js">JavaScript + HTML5 (MSE)</option>
                                    <option value="flash">Flash</option>
                                    <option value="silverlight">Silverlight</option>
                                    <option value="html5">Native HTML5 (Type 1)</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-2">Protection:</div>
                            <div class="col-md-6">
                                <select id="selectContentProtection" style="width: 100%" class="form-control">
                                    <option value="none" selected>None</option>
                                    <option value="aes">AES</option>
                                    <option value="playready">PlayReady</option>
                                    <option value="widevine">Widevine</option>
                                    <option value="drm">DRM (PlayReady and Widevine)</option>
                                </select>
                            </div>
                            <div id="protectionOther" class="col-md-4">
                                <input style="color:grey;width:100%;display:inline-block" type="text" class="input-sm form-control" id="token" placeholder="Token">
                            </div>
                        </div>
                        <br /><br />
                    </div>
                    <button id="config-save" type="button" class="btn btn-sm btn-primary">update player</button>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <!-- Display Token -->
    <div class="row">
        <div class="col-md-12 well">
            <div id="well">
                <h4>Token RawData</h4>
                <pre>@Model.KdAccessJwtToken.RawData</pre>
                <h4>Token Claims</h4>
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Claim Type</th>
                        <th>Claim Value</th>
                    </tr>
                    @if (Model.KdAccessJwtToken != null)
                {
                    foreach (var claim in Model.KdAccessJwtToken.Claims)
                    {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
                    }
                }
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/js/amp/main.js"></script>

